# üè¶ Bank Portal - Environment Configuration Template
# Copy this file to .env and adjust values for your environment

# =============================================================================
# üöÄ APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
ENVIRONMENT=dev

# =============================================================================
# üîê DATABASE CONFIGURATION
# =============================================================================

# Auth Service Database
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5433
AUTH_DB_NAME=authdb
AUTH_DB_USER=bankuser
AUTH_DB_PASSWORD=bankpass123

# Account Service Database  
ACCOUNT_DB_HOST=localhost
ACCOUNT_DB_PORT=5434
ACCOUNT_DB_NAME=accountdb
ACCOUNT_DB_USER=bankuser
ACCOUNT_DB_PASSWORD=bankpass123

# =============================================================================
# üîë SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRATION=86400

# Encryption Keys
ENCRYPTION_KEY=your-encryption-key-32-chars-min
HASH_SALT_ROUNDS=12

# =============================================================================
# üåê SERVICE URLS
# =============================================================================

# Frontend
FRONTEND_URL=http://localhost:4200
FRONTEND_PORT=4200

# Auth Service
AUTH_SERVICE_URL=http://localhost:8081
AUTH_SERVICE_PORT=8081

# Account Service
ACCOUNT_SERVICE_URL=http://localhost:8082
ACCOUNT_SERVICE_PORT=8082

# =============================================================================
# üê≥ DOCKER CONFIGURATION
# =============================================================================

# Docker Compose Settings
COMPOSE_PROJECT_NAME=bankportal
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_TAG=latest

# =============================================================================
# üìä MONITORING & LOGGING
# =============================================================================

# Logging Level
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check Settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# üîß DEVELOPMENT SETTINGS
# =============================================================================

# Debug Mode
DEBUG=false
SPRING_PROFILES_ACTIVE=dev

# Hot Reload
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true

# =============================================================================
# üöÄ PRODUCTION OVERRIDES (uncomment for production)
# =============================================================================

# NODE_ENV=production
# ENVIRONMENT=prod
# DEBUG=false
# LOG_LEVEL=WARN
# SPRING_PROFILES_ACTIVE=prod

# =============================================================================
# üìã NOTES
# =============================================================================
