# Application
NODE_ENV=production
ENVIRONMENT=prod
DEBUG=false

# Database Configuration (Use secure credentials!)
AUTH_DB_HOST=${AUTH_DB_HOST}
AUTH_DB_PORT=${AUTH_DB_PORT}
AUTH_DB_NAME=${AUTH_DB_NAME}
AUTH_DB_USER=${AUTH_DB_USER}
AUTH_DB_PASSWORD=${AUTH_DB_PASSWORD}

ACCOUNT_DB_HOST=${ACCOUNT_DB_HOST}
ACCOUNT_DB_PORT=${ACCOUNT_DB_PORT}
ACCOUNT_DB_NAME=${ACCOUNT_DB_NAME}
ACCOUNT_DB_USER=${ACCOUNT_DB_USER}
ACCOUNT_DB_PASSWORD=${ACCOUNT_DB_PASSWORD}

# JWT Configuration (Generate strong secrets!)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=3600

# Service URLs (Use HTTPS in production!)
FRONTEND_URL=${FRONTEND_URL}
AUTH_SERVICE_URL=${AUTH_SERVICE_URL}
ACCOUNT_SERVICE_URL=${ACCOUNT_SERVICE_URL}

# Security
ENCRYPTION_KEY=${ENCRYPTION_KEY}
HASH_SALT_ROUNDS=12

# Logging
LOG_LEVEL=WARN
SPRING_PROFILES_ACTIVE=prod

# Production Features
SPRING_DEVTOOLS_RESTART_ENABLED=false
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=false

# SSL/TLS
SSL_ENABLED=true
SSL_KEY_STORE=${SSL_KEY_STORE}
SSL_KEY_STORE_PASSWORD=${SSL_KEY_STORE_PASSWORD}
