# üè¶ Bank Portal - Development Environment
# This file contains development-specific settings

# Application
NODE_ENV=development
ENVIRONMENT=dev
DEBUG=true

# Database Configuration (matches docker-compose.yml)
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5433
AUTH_DB_NAME=authdb
AUTH_DB_USER=bankuser
AUTH_DB_PASSWORD=bankpass123

ACCOUNT_DB_HOST=localhost
ACCOUNT_DB_PORT=5434
ACCOUNT_DB_NAME=accountdb
ACCOUNT_DB_USER=bankuser
ACCOUNT_DB_PASSWORD=bankpass123

# JWT Configuration (Development - not for production!)
JWT_SECRET=dev-jwt-secret-key-for-development-only-change-in-production-123456
